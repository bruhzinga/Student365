<UserControl x:Class="Student365.UserControls.ScheduleDataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Student365.UserControls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel>
        <TextBlock Text ="{Binding Text}" Foreground="Black"></TextBlock>
        <DataGrid Grid.Column="0" ItemsSource="{Binding Schedule,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" AutoGenerateColumns="False" x:Name="THEGRID">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Subject_Num,Mode=TwoWay}"></DataGridTextColumn>
                <DataGridTextColumn Header="Subject" Binding="{Binding Subject,Mode=TwoWay}"></DataGridTextColumn>
                <DataGridTextColumn Header="Type" Binding="{Binding Subject_Type,Mode=TwoWay}"></DataGridTextColumn>
                <DataGridTextColumn Header="Aud" Binding="{Binding Auditorium,Mode=TwoWay}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</UserControl>